@model AddFilmViewModel

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <div class="mb-3">
                <input asp-for="@Model.Name" class="form-control" aria-required="true" placeholder="Name" />
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <textarea asp-for="@Model.Description" class="form-control" aria-required="true" rows="5" placeholder="Description"></textarea>
                <span asp-validation-for="@Model.Description" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input asp-for="@Model.Director" class="form-control" aria-required="true" placeholder="Director" />
                <span asp-validation-for="@Model.Director" class="text-danger"></span>
            </div>
            <div class="mb-3">             
                <input asp-for="@Model.ImageUrl" class="form-control" aria-required="true" placeholder="Image link"/>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input asp-for="@Model.VideoUrl" class="form-control" aria-required="true" placeholder="Video link" />
                <span asp-validation-for="@Model.VideoUrl" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input type="number" asp-for="Rating" class="form-control" value="" placeholder="Rating"/>
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input asp-for="@Model.Year" class="form-control" aria-required="true" placeholder="Year" />
                <span asp-validation-for="@Model.Year" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input asp-for="@Model.Country" class="form-control" aria-required="true" placeholder="Country"/>
                <span asp-validation-for="@Model.Country" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <select asp-for="@Model.GenreId" class="form-control">
                    @foreach (var genre in Model.Genres)
                    {
                        <option value="@genre.Id">@genre.Name</option>
                    }
                </select>
                <span asp-validation-for="GenreId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input class="btn btn-success" type="submit" value="Add" />
            </div>
        </form>
    </div>
</div>

