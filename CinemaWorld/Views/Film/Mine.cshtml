@model IEnumerable<AllFilmViewModel>
@{
    ViewBag.Title = "Favourites";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />


<div class="text-center row">
    @foreach (var film in Model)
    {
        <div class="card col-4" style="width: 20rem; ">
            <img class="card-img-top" style="width: 18rem;"
                 src="@film.ImageUrl" alt="Film Image">
            <div class="card-body">

                <h5 class="card-title mt-1">@film.Name</h5>
                <p class="mb-0">Author: @film.Country, @film.Year</p>
                <p class="mb-0">Description: @film.</p>
                <p>Category: @film.Genre</p>
            </div>

            <form class="input-group-sm" asp-controller="Film" asp-action="RemoveFromFavourites" asp-route-id="@film.Id">
                <input type="submit" value="Remove from Favourites" class="fs-6 btn btn-success mb-3 p-2" />
            </form>
        </div>
    }
</div>

