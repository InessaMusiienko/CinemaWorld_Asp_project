@model IEnumerable<NewsViewModel>

@{
    ViewBag.Title = "Coming soon to your screens...";
}
<link href="~/css/catalogue.css" rel="stylesheet" type="text/css">

<h2 class="text-center">@ViewBag.Title</h2>
<hr />
<div class="block-content">
    @foreach(var item in Model)
    {
       <div class="clean-blog-post">
             <div class="row">
                  <div class="col-lg-5"><img class="img-thumbnail img-fluid" src="@item.PhotoUrl"></div>
                       <div class="col-lg-7">
                           <h3>@item.Title</h3>
                           <div class="info"><span class="text-muted">@item.Date by&nbsp;<a>@item.Date</a></span></div>
                           <p>@item.Description</p>
                                             
                       </div>
             </div>
       </div>
    }                        
                        
</div>
