<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">

<section>
    <div class="swiper mySwiper">
        <div class="swiper-wrapper">
            <div class="swiper-slide">
                <div class="image">
                    <div class="black">                        
                        <h1 class="name">@Model.Name</h1>
                        <div class="photo">
                            <img src= @Model.ImageUrl />
                        </div>
                        <div class="star">
                            <i class="fa-solid fa-star"></i>
                            <i class="fa-solid fa-star"></i>
                            <i class="fa-solid fa-star"></i>
                            <i class="fa-solid fa-star-half-stroke"></i>
                            <i class="fa-regular fa-star">  @Model.Rating</i>
                        </div>
                        <div class="info-back">
                            <p>
                                @Model.Description
                            </p>
                        </div>
                        <div class="genre">
                            <button type="button" class="btn btn-outline-light">@Model.Genre</button>
                            <button class="btn btn-outline-light">@Model.Country</button>
                            <button class="btn btn-outline-light">@Model.Year</button>
                        </div>
                        <div class="watch">
                            <a href = @Model.VideoUrl>
                                 <i class="fa-solid fa-play"></i>                                
                             </a>
                        </div>
                    </div>

                    @if (User.Identity.IsAuthenticated)
                    {
                        <button>
                            <a asp-controller="Comment" asp-action="AddComment" asp-route-id=@Model.Id  class="commentButton">Add comment</a>
                        </button>
                    }
                                        
                    <div class="comment"> @*container*@
                        @if(!Model.Comments.Any())
                        {
                            <h2 class="no_comments">No comments added yet!</h2>
                        }                        

                        <div class="comment_container">
                            @foreach(var comment in Model.Comments)
                            {
                                <div class="comment_card">
                                    <div>
                                        <i class="glyphicon glyphicon-user"></i>
                                        <h3 class="comment_title">@comment.Name</h3>
                                    </div>
                                    <p>@comment.CommentText</p>

                                    <div class="comment_card-footer">
                                        <div>Likes 12</div>
                                        <div>Dislikes 2</div>
                                    </div>
                                </div>
                            }

                        </div>
                                              
                    </div>

                    <img src= "~/css/Pictures/allFilms.jpg" />
                </div>
            </div>
        </div>
    </div>
</section>


