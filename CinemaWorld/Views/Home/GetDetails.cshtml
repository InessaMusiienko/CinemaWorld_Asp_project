@using Microsoft.AspNetCore.Identity;
@using CinemaWorld.Models.Film;
@model DetailsFilmViewModel
@{
    Layout = null;
}

<link href="~/css/details.css" rel="stylesheet" type="text/css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />

<section>
    <div class="swiper mySwiper">
        <div class="swiper-wrapper">
            <div class="swiper-slide">
                <div class="image">
                    <div class="black">                        
                        <h1 class="name">@Model.Name</h1>
                        <div class="photo">
                            <img src= @Model.ImageUrl />
                        </div>
                        <div class="star">
                            <i class="fa-solid fa-star"></i>
                            <i class="fa-solid fa-star"></i>
                            <i class="fa-solid fa-star"></i>
                            <i class="fa-solid fa-star-half-stroke"></i>
                            <i class="fa-regular fa-star">  @Model.Rating</i>
                        </div>
                        <div class="info-back">
                            <p>
                                @Model.Description
                            </p>
                        </div>
                        <div class="genre">
                            <button class="category">@Model.Genre</button>
                            <button class="category">@Model.Country</button>
                            <button class="category-year">@Model.Year</button>
                        </div>
                        <div class="watch">
                            <a href = @Model.VideoUrl>
                                 <i class="fa-solid fa-play"></i>                                
                             </a>
                        </div>
                    </div>

                    <img src= "~/css/Pictures/allFilms.jpg" />
                </div>
            </div>
        </div>


    </div>
</section>


